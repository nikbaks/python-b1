function compareStrings(a, b) {
  if (a.length > b.length) return 1;
  if (a.length < b.length) return -1;
  return 0;
}

function upperFirst(str) {
  return str ? str[0].toUpperCase() + str.slice(1) : "";
}

function countVowels(str) {
  return (str.match(/[aeiouаеєиіїоуюя]/gi) || []).length;
}

function checkSpam(str) {
  const spamWords = [
    "100% безкоштовно",
    "збільшення продажів",
    "тільки сьогодні",
    "не видаляйте",
    "ххх"
  ];
  const lowerStr = str.toLowerCase();
  return spamWords.some(word => lowerStr.includes(word));
}

function truncate(str, maxLength) {
  return str.length <= maxLength ? str : str.slice(0, maxLength - 3) + "...";
}

function isPalindrome(str) {
  const clean = str.toLowerCase().replace(/[^a-zа-яіїє]/gi, "");
  return clean === clean.split("").reverse().join("");
}

function countWords(sentence) {
  return sentence.trim().split(/\s+/).length;
}

function longestWord(sentence) {
  const words = sentence.trim().split(/\s+/);
  let longest = "";
  for (const w of words) if (w.length > longest.length) longest = w;
  return longest;
}

function averageWordLength(sentence) {
  const words = sentence.trim().split(/\s+/);
  const totalLength = words.reduce((sum, w) => sum + w.length, 0);
  return words.length ? totalLength / words.length : 0;
}

function charIndexes(str, ch) {
  let indexes = [];
  for (let i = 0; i < str.length; i++) {
    if (str[i] === ch) indexes.push(i);
  }
  return { indexes, count: indexes.length };
}

// Приклади
console.log(compareStrings("Hello", "Hi")); 
console.log(upperFirst("hello world")); 
console.log(countVowels("Ми вчимо JavaScript")); 
console.log(checkSpam("Тільки сьогодні 100% безкоштовно!")); 
console.log(truncate("Hello, world!", 8)); 
console.log(isPalindrome("Аргентина манит негра")); 
console.log(countWords("Я люблю вивчати JavaScript")); 
console.log(longestWord("Я люблю вивчати JavaScript")); 
console.log(averageWordLength("Я люблю вивчати JavaScript")); 
console.log(charIndexes("banana", "a")); 
